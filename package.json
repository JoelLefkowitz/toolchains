{
  "name": "toolchains",
  "description": "Generate a command line interface for local scripts.",
  "version": "0.3.0",
  "license": "MIT",
  "author": "Joel Lefkowitz",
  "repository": "https://github.com/joellefkowitz/toolchains",
  "homepage": "https://joellefkowitz.github.io/toolchains",
  "bin": "dist/bundle.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "cli",
    "scripts",
    "typescript"
  ],
  "packageManager": "yarn@4.1.1",
  "metadata": {
    "publisher": "npm",
    "languages": [
      "TypeScript"
    ],
    "frameworks": [],
    "paradigms": [
      "Functional"
    ],
    "lifecycle": "Alpha"
  },
  "scripts": {
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "lint": "cspell . --dot --gitignore && eslint . --fix && tsc --noEmit && trufflehog3 -c .trufflehog3.yaml",
    "format": "prettier . --write",
    "build": "rollup -c rollup.config.js",
    "test": "jest",
    "docs": "typedoc --options docs/typedoc/typedoc.json && ts-node ./docs/typedoc/assets.ts"
  },
  "resolutions": {
    "cliui": "^8.0.1",
    "strip-ansi": "^6.0.1"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "ramda": "^0.30.1",
    "reviewed": "^0.11.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "29.0.0",
    "@types/node": "^18.11.0",
    "@types/ramda": "^0.30.2",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "cspell": "^8.0.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "husky": "^9.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.1.9",
    "pinst": "^3.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-jsdoc": "^1.3.0",
    "rollup": "^4.29.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0",
    "typedoc": "^0.25.7",
    "typedoc-material-theme": "^1.0.2",
    "typescript": "~5.3.0"
  }
}
